# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here  # Get this from Discord Developer Portal
DISCORD_CLIENT_ID=your_discord_client_id_here  # Get this from Discord Developer Portal > General Information
SUPPORT_CHANNEL_PREFIX=support-  # Channels starting with this prefix will be considered support channels

# Bot Personality Configuration
BOT_TONE=friendly  # Options: friendly, professional, casual
                  # Controls the overall tone of bot responses

# Ephemeral Memory Configuration
MAX_CONTEXT_SIZE=10  # Number of previous messages to keep for context
                     # Higher values provide more context but use more memory
CONTEXT_MAX_AGE_MINUTES=30  # How long to keep messages in context before cleanup
                           # Recommended: 30-60 minutes
